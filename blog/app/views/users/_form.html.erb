<%= render 'shared/errors', obj:@user %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, local:true, class: "shadow p-3 bg-white rounded" ) do | f |%>

        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :username, class: " form-control shadow rounded" , placeholder: "UserName" %>
            </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :email, class: " form-control shadow rounded" , placeholder: "Email" %>
            </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.password_field :password, class: " form-control shadow rounded" , placeholder: "Password"
                %>
            </div>
        </div>

        <div class="form-group row mb-3  justify-content-center w-25">
          <%= f.submit "Save info" , class: "btn btn-outline-primary btn-lg" %>
        </div>

        <%end%>
    </div>
    <%= link_to 'Cancel and return' , class: "btn btn-outline-danger btn-lg" %>
  </div>