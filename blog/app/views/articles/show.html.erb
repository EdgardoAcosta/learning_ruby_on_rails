<div class="row">

  <div class="col-md-12 ">
    <h2>Show</h2>
    <p>
      <strong>Title:</strong>
      <%=@article.title %>
    </p>
    <p>
      <strong>Title:</strong>
      <%=@article.description%>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to('Edit' , edit_article_path(@article.id), class: "btn btn-primary" ) %>
    <%= link_to('Delete' , article_path(@article.id),data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "btn btn-danger" ) %>
    <%= link_to('Return' , articles_path, class: "btn btn-info" ) %>
  </div>
</div>