

<% if @article.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@article.errors.count, "error" ) %> prohibited this article from being saved:
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
    </ul>
  </div>
<% end %>
<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(model: @article, local:true, class: "shadow p-3 bg-white rounded") do | f |%>

      <div class="form-group row mb-3">
        <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: " form-control shadow rounded", placeholder: "Title" %>
          </div>
      </div>

      <div class="form-group row mb-3">
        <%= f.label :description, class: "col-2 col-form-label"  %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: " form-control shadow rounded", placeholder: "Description" %>
        </div>
      </div>

      <div class="form-group row mb-3  justify-content-center w-25">
        <%= f.submit "Save info" , class: "btn btn-outline-primary btn-lg" %>
      </div>

    <%end%>
  </div>
  <%= link_to  'Cancel and return', class: "btn btn-outline-danger btn-lg" %> 
</div>