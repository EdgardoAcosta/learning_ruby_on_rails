<div class="row">

  <div class="col-md-12 ">
    <h1 class="text-center mt-4">Articles Listing page</h1>
  </div>
  <!-- <div class="col-md-12 ">
    <%= link_to "New Article", new_article_path, class: "btn btn-primary text-right" %>
  </div> -->
  <div class="col-md-12">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow bg-white rounded">
            <div class="card-header">
              <i>by <%= article.user.username %></i>
            </div>
            <div class="card-body">
              <h5 class="card-title">
                <%= article.title %>
              </h5>
              <p class="card-text">
                <%= truncate(article.description, length: 100) %>
              </p>
              <%= link_to 'Show' , article_path(article), class: "btn btn-outline-primary" %>
              <%= link_to 'Edit' , edit_article_path(article), class: "btn btn-outline-warning" %>
              <%= link_to 'Destroy' , article_path(article), method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-outline-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small>
                Created <%= time_ago_in_words(article.created_at) %> ago,
                </br>
                Edited <%= time_ago_in_words(article.updated_at) %> ago 
              
              </small>
            </div>
          </div>
        </div>
      </div>

      <% end %>
  </div>

</div>